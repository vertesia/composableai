        "vite": "^6.3.5"
    },
    "packageManager": "pnpm@10.8.1",
    "pnpm": {
        "overrides": {
            "react": "19.1.0",
            "react-dom": "19.1.0",
            "@types/react": "19.1.6",
            "@types/react-dom": "19.1.5",
            "cross-spawn@<6.0.6": "^6.0.6",
            "esbuild@<0.25.0": "^0.25.0",
            "koa@>=2.0.0 <2.15.4": "^2.15.4",
