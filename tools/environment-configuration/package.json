{
  "name": "environment-configuration",
  "version": "0.0.1",
  "description": "A collection of scripts to automate the configuration of execution environments in Vertesia",
  "license": "Apache-2.0",
  "author": "Vertesia",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "npx eslint",
    "format": "npx prettier --write \"**/*.{ts,js,json,md}\"",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "aws": "npx bun ./src/index.ts aws",
    "gcp": "npx bun ./src/index.ts gcp"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@eslint/markdown": "^7.5.1",
    "@tsconfig/node-lts": "^22.0.1",
    "@types/bun": "latest",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.0.0",
    "prettier": "3.5.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "dependencies": {
    "@aws-sdk/client-iam": "^3.948.0",
    "@vertesia/client": "0.82.1",
    "commander": "^14.0.2",
    "dotenv": "^16.6.1",
    "google-auth-library": "^10.5.0"
  }
}
