        "cli-table3": "^0.6.5",
        "commander": "^12.1.0",
        "enquirer": "^2.4.1",
        "figures": "^6.1.0",
        "glob": "^11.1.0",
        "gradient-string": "^3.0.0",
        "json-schema": "^0.4.0",
        "json-schema-to-typescript": "^13.1.1",
        "jsonwebtoken": "^9.0.2",
        "log-symbols": "^7.0.0",
        "log-update": "^6.1.0",
        "mime": "^4.0.4",
        "open": "^10.1.0",
        "ora": "^8.2.0",
        "readline": "^1.3.0",
        "seedrandom": "^3.0.5",
        "signal-exit": "^4.1.0",
        "typescript": "^5.5.3"
