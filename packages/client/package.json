{
    "name": "@vertesia/client",
    "version": "1.0.0-dev.20260225.024852Z",
    "type": "module",
    "types": "./lib/types/index.d.ts",
    "files": [
        "lib",
        "src",
        "tsconfig.dist.json"
    ],
    "license": "Apache-2.0",
    "scripts": {
        "lint": "eslint './src/**/*.{jsx,js,tsx,ts}'",
        "build": "pnpm exec tsmod build && pnpm exec rollup -c",
        "clean": "rimraf ./node_modules ./lib ./tsconfig.tsbuildinfo",
        "test": "vitest run"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@rollup/plugin-commonjs": "^28.0.3",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-typescript": "^12.1.2",
        "@types/node": "^22.19.2",
        "eslint": "^10.0.2",
        "rollup": "^4.40.2",
        "rollup-plugin-terser": "^7.0.2",
        "ts-dual-module": "^0.6.3",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.1",
        "vitest": "^4.0.16"
    },
    "dependencies": {
        "@llumiverse/common": "workspace:*",
        "@vertesia/api-fetch-client": "workspace:*",
        "@vertesia/common": "workspace:*",
        "eventsource": "^3.0.6"
    },
    "ts_dual_module": {
        "outDir": "lib"
    },
    "exports": {
        ".": {
            "types": "./lib/types/index.d.ts",
            "import": "./lib/esm/index.js",
            "require": "./lib/cjs/index.js"
        },
        "./node": {
            "types": "./lib/types/nodejs/index.d.ts",
            "import": "./lib/esm/nodejs/index.js",
            "require": "./lib/cjs/nodejs/index.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/vertesia/composableai.git",
        "directory": "packages/client"
    },
    "keywords": [
        "vertesia",
        "client",
        "api",
        "sdk",
        "llm",
        "ai",
        "typescript"
    ],
    "typesVersions": {
        "*": {
            "node": [
                "./lib/types/nodejs/index.d.ts"
            ]
        }
    }
}
