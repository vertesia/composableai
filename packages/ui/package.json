{
  "name": "@vertesia/ui",
  "version": "0.55.0",
  "description": "Vertesia UI components and and hooks",
  "type": "module",
  "main": "./lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "license": "Apache-2.0",
  "homepage": "https://docs.vertesiahq.com",
  "keywords": [
    "vertesia",
    "UI",
    "react",
    "components",
    "hooks"
  ],
  "scripts": {
    "build": "pnpm exec rollup -c",
    "lint": "eslint ."
  },
  "dependencies": {
    "@vertesia/client": "workspace:*",
    "@vertesia/common": "workspace:*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "rollup": "^4.40.2",
    "rollup-plugin-dts": "^6.2.1",
    "typescript": "~5.8.3"
  },
  "exports": {
    "./context": {
      "types": "./lib/types/context/index.d.ts",
      "default": "./lib/context.js"
    },
    "./router": {
      "types": "./lib/types/router/index.d.ts",
      "default": "./lib/router.js"
    },
    "./session": {
      "types": "./lib/types/session/index.d.ts",
      "default": "./lib/session.js"
    },
    "./components": {
      "types": "./lib/types/components/index.d.ts",
      "default": "./lib/components.js"
    },
    "./code": {
      "types": "./lib/types/code/index.d.ts",
      "default": "./lib/code.js"
    },
    "./form": {
      "types": "./lib/types/form/index.d.ts",
      "default": "./lib/form.js"
    },
    "./features": {
      "types": "./lib/types/features/index.d.ts",
      "default": "./lib/features.js"
    }
  },
  "types": "./lib/index.d.ts",
  "typesVersions": {
    "*": {
      "context": [
        "./lib/types/context/index.d.ts"
      ],
      "router": [
        "./lib/types/router/index.d.ts"
      ],
      "session": [
        "./lib/types/session/index.d.ts"
      ],
      "components": [
        "./lib/types/components/index.d.ts"
      ],
      "code": [
        "./lib/types/code/index.d.ts"
      ],
      "features": [
        "./lib/types/features/index.d.ts"
      ],
      "form": [
        "./lib/types/form/index.d.ts"
      ]
    }
  }
}