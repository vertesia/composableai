{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tools Server",
            "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
            "args": [
                "dev"
            ],
            "autoAttachChildProcesses": true,
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "sourceMaps": true,
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}
