{
    "name": "@vertesia/create-plugin",
    "version": "0.80.0-dev-20251118",
    "description": "Initialize a Vertesia plugin package",
    "type": "module",
    "bin": {
        "create-plugin": "./bin/create-plugin.mjs"
    },
    "main": "./lib/main.js",
    "types": "./lib/main.d.ts",
    "files": [
        "lib",
        "templates",
        "bin"
    ],
    "license": "Apache-2.0",
    "homepage": "https://docs.vertesiahq.com/",
    "keywords": [
        "vertesia",
        "ui",
        "plugin"
    ],
    "scripts": {
