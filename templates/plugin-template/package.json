{
    "name": "plugin-template",
    "version": "1.0.0-dev.20260203.130115Z",
    "description": "A unified template for building custom UI plugins and tool servers for Vertesia",
    "type": "module",
    "main": "lib/server.js",
    "files": [
        "dist",
        "lib"
    ],
    "author": "Vertesia",
    "license": "Apache-2.0",
    "scripts": {
        "dev:ui": "vite dev",
        "dev": "npm run build:server && node ./lib/server-node.js",
        "build": "npm run build:server && npm run build:ui",
        "build:server": "rollup -c && node ./lib/build-site.js ./dist",
        "build:server:watch": "rollup -c -w",
        "build:ui": "npm run build:ui:app && npm run build:ui:lib",
        "build:ui:app": "vite build --mode app",
        "build:ui:lib": "vite build --mode lib",
        "start": "node ./lib/server-node.js",
        "start:watch": "node --watch ./lib/server-node.js",
        "start:debug": "node --inspect --watch ./lib/server-node.js",
        "start:vercel": "vercel dev",
        "lint": "eslint .",
        "preview": "vite preview",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "plugin",
        "ui-plugin",
        "tool-server",
        "hono",
        "vercel",
        "llm",
        "ai",
        "tools",
        "skills",
        "interactions",
        "mcp"
    ],
    "peerDependencies": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.0",
        "@rollup/plugin-commonjs": "^28.0.8",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-typescript": "^12.1.2",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/vite": "^4.1.18",
        "@types/node": "^22.19.2",
        "@types/react": "^19.2.3",
        "@types/react-dom": "^19.2.3",
        "@vertesia/build-tools": "workspace:*",
        "@vertesia/plugin-builder": "workspace:*",
        "@vitejs/plugin-basic-ssl": "^2.1.0",
        "@vitejs/plugin-react": "^5.1.2",
        "concurrently": "^9.1.2",
        "eslint": "^9.39.1",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.5.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "rollup": "^4.59.0",
        "rollup-plugin-terser": "^7.0.2",
        "tailwindcss": "^4.1.18",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.3",
        "vite": "^7.3.0",
        "vite-plugin-serve-static": "^1.2.0"
    },
    "dependencies": {
        "@hono/node-server": "^1.19.5",
        "@llumiverse/common": "workspace:*",
        "@vertesia/client": "workspace:*",
        "@vertesia/common": "workspace:*",
        "@vertesia/tools-sdk": "workspace:*",
        "@vertesia/ui": "workspace:*",
        "dotenv": "^17.2.3",
        "hono": "^4.10.3"
    }
}