{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.ui.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@vertesia/common": [
        "./node_modules/@vertesia/common/src/index.ts"
      ],
      "@vertesia/client": [
        "./node_modules/@vertesia/client/src/index.ts",
      ],
      "@vertesia/ui/*": [
        "./node_modules/@vertesia/ui/src/*"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src/ui"
  ],
  "references": [
    {
      "path": "./node_modules/@vertesia/common/tsconfig.dist.json"
    },
    {
      "path": "./node_modules/@vertesia/ui/tsconfig.dist.json"
    }
  ]
}
